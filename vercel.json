{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build" },
    { "src": "backend/api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api/$1" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "functions": {
    "backend/api/cleanup.js": {
      "memory": 128,
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cleanup",
      "schedule": "0 5 * * *"
    }
  ]
}